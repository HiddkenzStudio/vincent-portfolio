---
const { question, answer } = Astro.props;
---

<div class="faqCard">
	<div class="question">
		<h3>{question}</h3>
		...
	</div>
	<p class="answer">{answer}</p>
</div>

<style lang="scss">
	.faqCard {
		transition: all 1s ease;
		margin-top: var(--block-padded);
		margin-inline: var(--narrow-inline);
		padding: 1rem;
		border: var(--border-width) solid var(--color-faded);
		& .question {
			display: flex;
			justify-content: space-between;
		}
	}

	h3 {
		font-family: var(--font-title);
	}

	.answer {
		opacity: 0;
		max-height: 0;
	}

	.expanded {
		opacity: 1;
		max-height: 100px;
		transition: all 1s ease;
	}
</style>
