---
const { cardLayout, painting, paintingAlt, title, date, description } =
	Astro.props;
---

<article class={cardLayout}>
	<img src={painting} alt={paintingAlt} />
	<div class="content">
		<div>
			<h3>{title}</h3>
			<h4>{date}</h4>
		</div>
		<div>
			<hr />
			<p>{description}</p>
		</div>
	</div>
</article>

<style lang="scss">
	@use "@styles/variables" as media;

	article {
		margin-block: 15rem;
		margin-inline: 2vw;
		img {
			width: 100%;
			border: 0.3rem solid transparent; /* Set a transparent solid border */
			padding: 0.5rem;
			border-image: linear-gradient(to top, var(--color-accent), #00000000) 1; /* Apply linear gradient as the border image */
		}
		.content {
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			width: 100%;
			overflow-wrap: break-word;
			h3 {
				font-family: var(--font-quote);
				font-size: 1.8rem;
			}
			h4 {
				font-family: var(--font-quote);
				font-size: 1.2rem;
			}
		}
	}

	@media only screen and (min-width: media.$media-phone) {
		.layout-1 {
			display: grid;
			grid-template-columns: repeat(2, 47vw);
			gap: 1.5rem;
		}

		.layout-2 {
			img {
				height: 60vh;
				margin-bottom: 2rem;
			}
		}

		.layout-3 {
			display: grid;
			grid-template-columns: repeat(2, 50%);
			gap: 1.5rem;
			margin-right: 0;
			& :first-child {
				order: 1;
			}
			.content {
				flex-direction: column-reverse;
			}
		}
	}
</style>
